<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:elevation="10dp"
    android:background="@drawable/item_selected"
    android:padding="10sp"
    android:layout_marginVertical="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_denuncia_circle"
        android:background="@drawable/circle_item"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_estado"
        android:src="@drawable/estadoa"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_denuncia_titulo"
        android:text="Denuncia 1"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_denuncia_circle"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_denuncia_direccion"
        android:text="Direccion"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_denuncia_circle"
        android:layout_below="@id/item_denuncia_titulo"
        android:textSize="16sp"/>


</RelativeLayout>