<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:paddingHorizontal="30dp"
    android:paddingTop="100dp"
    android:paddingBottom="30dp"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo3"
        android:id="@+id/logo"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_register"
        android:text="Registrar Cuenta"
        android:textSize="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16sp"
        android:layout_below="@id/logo"
        android:fontFamily="@font/sansitaswashedregular"
        />
    <ImageView
        android:id="@+id/register_icon_email"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/register_register"
        android:src="@drawable/ic_email"
        />
    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@id/register_register"
        android:layout_toRightOf="@id/register_icon_email"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        />
    <ImageView
        android:id="@+id/register_icon_user"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/register_email"
        android:src="@drawable/ic_user"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"
        android:layout_below="@id/register_email"
        android:layout_toRightOf="@id/register_icon_user"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/register_icon_phone"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@id/register_name"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:src="@drawable/ic_phone" />

    <EditText
        android:id="@+id/register_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Celular"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_name"
        android:layout_toRightOf="@id/register_icon_phone"
        />
    <ImageView
        android:id="@+id/register_icon_pass"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@id/register_celular"
        android:src="@drawable/ic_password"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/register_clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="numberPassword"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_celular"
        android:layout_toRightOf="@id/register_icon_pass"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:text="Registrar"
        android:onClick="createAccount"
        android:background="@drawable/button_rounded"
        android:textColor="#ffff"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/register_clave"
        android:fontFamily="@font/bebasneueregular"
        android:textSize="26dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¿Ya tienes cuenta? Inicia sesion"
        android:gravity="center"
        android:textColor="#2196F3"
        android:layout_marginTop="16dp"
        android:onClick="launchLogin"
        android:layout_below="@id/register_btn"
        />

</RelativeLayout>